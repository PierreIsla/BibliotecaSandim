@page
@model BibliotecaSandim.Pages.Autores.IndexModel

@{
    ViewData["Title"] = "Autores";
}

<div class="container mt-4">

    <div class="card shadow-sm">
        <div class="card-body">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h2 class="mb-0">Autores</h2>
                    <small class="text-muted">
                        Gestão de autores registados na biblioteca
                    </small>
                </div>

                <a asp-page="Create" class="btn btn-success">
                    + Criar Autor
                </a>
            </div>

            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Nome</th>
                        <th>Nacionalidade</th>
                        <th>Data de Nascimento</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>

                <tbody>
                @foreach (var item in Model.Autor)
                {
                    <tr>
                        <td>@item.Nome</td>

                        <td>
                            <small class="text-secondary">
                                @item.Nacionalidade
                            </small>
                        </td>

                        <td>
                            @if (item.DataNascimento.HasValue)
                            {
                                @item.DataNascimento.Value.ToString("dd/MM/yyyy")
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>

                        <td class="text-center">
                            <a asp-page="./Edit"
                               asp-route-id="@item.AutorID"
                               class="btn btn-sm btn-warning">
                                Editar
                            </a>

                            <a asp-page="./Details"
                               asp-route-id="@item.AutorID"
                               class="btn btn-sm btn-info text-white">
                                Detalhes
                            </a>

                            <a asp-page="./Delete"
                               asp-route-id="@item.AutorID"
                               class="btn btn-sm btn-danger">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>

        </div>
    </div>

</div>